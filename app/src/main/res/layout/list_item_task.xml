<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="170dp"
    android:layout_height="130dp">

    <ImageView
        android:id="@+id/imageViewBackgroundItem"
        android:layout_width="140dp"
        android:layout_height="95dp"
        android:scaleType="center"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/cc0400_color" />

    <TextView
        android:id="@+id/textViewTitleItem"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Task's Title"
        android:textAlignment="center"
        android:textColor="#FFFFFF"
        android:textSize="16sp"
        android:textStyle="normal|bold"
        app:layout_constraintBottom_toBottomOf="@+id/imageViewBackgroundItem"
        app:layout_constraintEnd_toEndOf="@+id/imageViewBackgroundItem"
        app:layout_constraintStart_toStartOf="@+id/imageViewBackgroundItem"
        app:layout_constraintTop_toTopOf="@+id/imageViewBackgroundItem" />
</androidx.constraintlayout.widget.ConstraintLayout>
